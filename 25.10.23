читачі = {9: {"прізвище": "Йоник", "ім'я": "Роман", "група": "ІПЗс-23-2", "курс": 1, "книги_борг": [], "статистика": []}}

while True:
    print("Меню:")
    print("1 - Вивести картку читача")
    print("2 - Взяти книгу у борг")
    print("3 - Повернути книгу")
    print("0 - Вийти з програми")

    вибір = input("Будь ласка, введіть номер опції: ")

    if вибір == "0":
        break
    elif вибір == "1":
        ідентифікатор = int(input("Будь ласка, введіть свій ID: "))
        читач = читачі.get(ідентифікатор)
        if читач:
            print(f"ID: {ідентифікатор}, Прізвище: {читач['прізвище']}, Ім'я: {читач['ім'я']}, Група: {читач['група']}, Курс: {читач['курс']}, Книги у боргу: {читач['книги_борг']}, Статистика книг: {читач['статистика']}")
        else:
            print("Читача з таким ID не знайдено.")
    elif вибір == "2":
        ідентифікатор = int(input("Будь ласка, введіть свій ID: "))
        читач = читачі.get(ідентифікатор)
        if читач:
            книга = input("Будь ласка, введіть назву книги: ")
            читач['книги_борг'].append(книга)
            print(f"Книга '{книга}' успішно додана до боргу.")
        else:
            print("Читача з таким ID не знайдено.")
    elif вибір == "3":
        ідентифікатор = int(input("Будь ласка, введіть свій ID: "))
        читач = читачі.get(ідентифікатор)
        if читач:
            print(f"Книги у боргу: {читач['книги_борг']}")
            книга_повернення = input("Будь ласка, введіть назву книги для повернення: ")
            if книга_повернення in читач['книги_борг']:
                читач['книги_борг'].remove(книга_повернення)
                читач['статистика'].append(книга_повернення)
                print(f"Книга '{книга_повернення}' успішно повернена.")
            else:
                print("Ця книга не в боргу у даного читача.")
        else:
            print("Читача з таким ID не знайдено.")
    else:
        print("Невірний вибір опції. Будь ласка, спробуйте ще раз.")
